[init]
  defaultBranch = main
[user]
  name = Xavier Chen
  email = xaviernehc@gmail.com
[diff]
  tool = nvimdiff
[merge]
  tool = nvimdiff
  conflictstyle = zdiff3
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED \
        -c '4wincmd w' -c 'wincmd J'
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
